# 应用配置
APP_NAME=DahSchnappi
APP_VERSION=1.0.0
DEBUG=true

# 数据库配置 (可选: sqlite, postgresql, mysql)
DATABASE_IMPLEMENTATION=sqlite

# SQLite 配置 (默认，适合开发/中小规模)
SQLITE_PATH=data/dahschnappi.db

# PostgreSQL 配置 (生产环境推荐)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=dahschnappi
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-postgres-password

# MySQL 配置 (生产环境)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=dahschnappi
# MYSQL_USER=root
# MYSQL_PASSWORD=your-mysql-password
# MYSQL_CHARSET=utf8mb4

# 缓存配置
CACHE_IMPLEMENTATION=memory
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=3600

# 加密配置（生产环境必须设置）
# 生成方法: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here-change-this

# JWT 认证配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS 配置
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# LLM 配置
LLM_PROVIDER=claude
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/worklog.log
